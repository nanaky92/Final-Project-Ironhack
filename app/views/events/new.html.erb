<div class="container text-center">
  <div class="row">
    <div class="col-xs-offset-1 col-xs-10 col-md-offset-2 col-md-8">
        <h3>Create new event for <%=@group.name%></h3>
    </div>
  </div>

  <div class="row margin-top-with-header">
    <div class="col-xs-offset-1 col-xs-10 col-md-offset-2 col-md-8 img-rounded light-blue-node">
       <%= form_for(@event, url: group_events_url) do |f| %>
        <% if @event.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

            <ul>
            <% @event.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

          <div class="field field-margin">
            <%= f.label :name, "Name your event" %>
            <%= f.text_field :name %>
          </div>

          <div class="field field-margin">
            <%= f.label :description %>
            <%= f.text_field :description %>
          </div>

          <div class="field field-margin">
            <%= f.label :deadline, "Deadline for voting" %>
            <%= f.datetime_select :deadline, {:default => Time.now}, { class: "btn" } %>
          </div>

          <%= f.text_field :group_id, :type => :hidden, :input_html => { value: @group.id } %>

          <%= button_tag(type: 'submit', class: "btn btn-primary field-margin") do %>
            <span class="glyphicon glyphicon-plus"> <span>Create Event</span></span> 
          <% end %>
        <% end %>    
    </div>    
  </div>
 
      </div>
  </div>
</div>