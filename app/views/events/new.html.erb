<div class="container">
  <div class="row">
    <div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6 text-center">
        <h3>Create new event for <%=@group.name%></h3>
    </div>
  </div>

  <div class="row" style="margin-top: 1em">
    <div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6 text-center img-rounded light-blue-node">
       <%= form_for(@event, url: create_event_url) do |f| %>

          <div class="field">
            <%= f.label :name, "Name your event" %>
            <%= f.text_field :name %>
          </div>

          <div class="field">
            <%= f.label :description %>
            <%= f.text_field :description %>
          </div>

          <div class="field">
            <%= f.label :deadline, "Deadline for voting" %>
<!--               <%= select_datetime Date.today, prefix: :event, html: {class: "asfasf"} %>
 -->              
            <%= f.datetime_select :deadline, {:default => Time.now}, { class: "btn" } %>
          </div>

          <%= f.text_field :group_id, :type => :hidden, :input_html => { value: @group.id } %>

          <div class="actions">
            <%= f.submit class: "btn btn-primary"%>
          </div>
        <% end %>    
    </div>    
  </div>
 
      </div>
  </div>
</div>