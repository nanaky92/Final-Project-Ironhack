
<div class="container text-center">
  <div class="row">
    <div class="col-md-offset-3 col-md-6 col-sm-offset-2 col-sm-8 col-xs-offset-1 col-xs-10" >
      <h3><%=@event.name%> for <%=@group.name%></h3>
    </div>
  </div>
  
  <div class="row margin-top-with-header">
    <div class="col-md-offset-3 col-md-6 col-sm-offset-2 col-sm-8 col-xs-offset-1 col-xs-10" >
      <h3>Possible meetups</h3>    
    </div>
  </div>

  <div class="img-rounded light-blue-node">
    <div class="row margin-top">
      <div class="col-md-offset-2 col-md-8 col-sm-offset-2 col-sm-8 col-xs-offset-1 col-xs-10">
        
        <%@appointments.each do |appointment|%>

          <div class="row margin">
            <div class="col-xs-offset-0 col-xs-4" >
              <strong> <%=appointment.action%> </strong>
            </div>
            <div class="col-xs-offset-0 col-xs-4" >
              <strong> <%=appointment.place%> </strong>
            </div>
            <div class="col-xs-offset-0 col-xs-4" >
              <strong> <span class="time-with-time-zone"> <%=appointment.time%> </span></strong>
            </div>
          </div>

        <%end%>
          <div class="row margin">
            <div class="col-xs-offset-1 col-xs-10">
              <span>
                <%= link_to "Add new possible meetup place/action/schedule", 
                new_group_event_appointment_url(@group.id, @event.id), method: "get"  %>
              </span>
            </div>
          </div>

      </div>
    </div>
  </div>

  <div class="row margin-top">
    <div class="col-xs-offset-1 col-xs-10">
      <span>
         <%= link_to "Go back to group", group_url(@group.id), method: "get"  %>
      </span>
    </div>
  </div>
  
  <div class="row margin-top">
    <div class="col-xs-offset-1 col-xs-10">
      <span>
        <%= link_to "Vote event", group_event_url(@group.id, @event.id), method: "get"  %>
      </span>
    </div> 
  </div>

</div>