<div class="container text-center">
  <div class="row">
    <div class="col-md-offset-3 col-md-6 col-xs-offset-2 col-xs-8" >
      <h3> <%=@group.name + "\'s " + @event.name %></h3>
    </div>
  </div>
  
  <div class="row margin-top-with-header">
    <div class="col-md-offset-3 col-md-6 col-xs-offset-2 col-xs-8" >
      <h4><%=@event.description %></h4>    
    </div>
  </div>


  <div class="row margin-top">
    <div class="col-md-offset-1 col-md-10 img-rounded light-blue-node">
      <div class="row margin">
        <div class="col-xs-offset-0 col-xs-3" >
          <strong> Action </strong>
        </div>
        <div class="col-xs-offset-0 col-xs-3" >
          <strong> Meeting Place </strong>
        </div>
        <div class="col-xs-offset-0 col-xs-4" >
          <strong> Meeting Time </strong>
        </div>
      </div>
      

      <%@appointments.each do |appointment| %>
        <div class="row margin">
          <% #votation = appointment.votations.find_by(user_id: @user.id) %>
          <% votation = @appointments_votation_map[appointment.id] %>
          <div class="col-xs-offset-0 col-xs-3 margin-top-votations">
            <%= appointment.action%>
          </div>
          <div class="col-xs-offset-0 col-xs-3 margin-top-votations">
            <%= appointment.place%>
          </div>
          <div class="col-xs-offset-0 col-xs-4 margin-top-votations">
            <span class="time-with-time-zone"> <%= appointment.time %> </span>
          </div>
          
            <div class="col-xs-offset-0 col-xs-2 img-rounded light-blue-node slider-change-color" 
            data-id=<%=votation.id.to_s%> style="background-color: white">
                <span>
                  <span class="value value-from-slider" data-id=<%=votation.id.to_s%> data-group=<%=@group.id.to_s%> 
                  data-event=<%=@event.id.to_s%>>
                    <%=votation.result%>
                  </span>
                  <input type="range" min="0" max="100" data-id=<%=votation.id.to_s%>>
                </span>â€‹
            </div>
          
        </div>
      <%end%>
      
      <%if @isUserAdmin%>
        <div class="row margin">
          <div class="col-xs-offset-1 col-xs-10">
            <span>
              <%= link_to "Add new possible meetup place/action/schedule", 
              new_group_event_appointment_url(@group.id, @event.id), method: "get"  %>
            </span>
          </div>
        </div>
      <%end%>

    </div>
  </div>

  <div class="row margin-top">
    <div class="col-md-offset-3 col-md-6 col-xs-offset-2 col-xs-8">
      <span>
        <button class="btn btn-primary btn-send-votation" data-token=<%= form_authenticity_token %>>
          Send Votation
        </button>
      </span>
    </div>  
  </div>

  <div class="row margin-top">
    <div class="col-md-offset-3 col-md-6 col-xs-offset-2 col-xs-8">
      <span title="Check this option if you aren't going to an event no matter what">
        <button class="btn btn-primary btn-not-going hover" data-token=<%= form_authenticity_token %>>
          Not going
        </button>
      </span>
    </div>  
  </div>


  <div class="row margin-top">
    <div class="col-md-offset-3 col-md-6 col-xs-offset-2 col-xs-8">
      <ul class="list-without-style list-inline">
        <li><%= link_to "See results", group_event_url(@group.id, @event.id), method: "get"%></li>
        <li><%= link_to "Go back to group", group_url(@group.id), method: "get"  %></li>
      </ul>
    </div>    
  </div>


  <div class="row margin-top">
      <div class="col-md-4 col-md-offset-4">
        <div class="success-messages light-blue-node img-rounded text-center"></div>
        <div class="error-messages img-rounded text-center alert-color"></div>
      </div>
  </div>

</div>

