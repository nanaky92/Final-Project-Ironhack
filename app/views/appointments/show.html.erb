<div class="container text-center">
  <div class="row">
    <div class="col-md-offset-3 col-md-6 col-xs-offset-2 col-xs-8" >
      <h3> <%=@group.name + "\'s " + @event.name %></h3>
      <h3> <%=@appointment.action.to_s + " in " + @appointment.place.to_s + " at "%> 
      <span class="time-with-time-zone" style="font-size: 24px"><%=@appointment.time%></span> </h3>
    </div>
  </div>
  
  <div class="row" style="margin-top: 3em">
    <div class="col-md-offset-3 col-md-6 col-xs-offset-2 col-xs-8" >
      <h4><%=@event.description %></h4>    
    </div>
  </div>

  
  <%if @number_voters != 0 %>
    <div class="row margin-top">
      <div class="col-md-offset-3 col-md-6 col-sm-offset-2 col-sm-8 col-xs-offset-1 col-xs-10 img-rounded light-blue-node">

        <div class="row margin">
          <div class="col-xs-offset-1 col-xs-4 img-rounded light-blue-node" >
            <strong> Name </strong>
          </div>
          <div class="col-xs-offset-2 col-xs-4 img-rounded light-blue-node" >
            <strong> Votation </strong>
          </div>
        </div>

        <% @votations.each do |votation|%>
          <%if votation.access == true %>
            <div class="row" style="margin: 1em">
              <div class="col-xs-offset-1 col-xs-4 img-rounded light-blue-node" style="margin-top: 1.2em">
                <%= votation.user.name%>
              </div>
              <div class="col-xs-offset-2 col-xs-4 img-rounded light-blue-node" style="margin-top: 1.2em">
                <%= votation.result%>
              </div>
            </div>
          <%end%>    
        <%end%>    
      </div>
    </div>
  <%end%>    

  <%if @number_non_voters != 0 %>
    <div class="row" style="margin-top: 3em">
      <div class="col-md-offset-3 col-md-6 col-xs-offset-2 col-xs-8" >
        <h4>People who haven't voted yet</h4>    
      </div>
    </div>

    <div class="row margin-top">
      <div class="col-md-offset-3 col-md-6 col-sm-offset-2 col-sm-8 col-xs-offset-1 col-xs-10 img-rounded light-blue-node">

        <div class="row margin">
          <div class="col-xs-offset-1 col-xs-4 img-rounded light-blue-node" >
            <strong> Name </strong>
          </div>
          <div class="col-xs-offset-2 col-xs-4 img-rounded light-blue-node" >
            <strong> Votation </strong>
          </div>
        </div>

        <% @votations.each do |votation|%>
          <%if votation.access == false %>
            <div class="row" style="margin: 1em">
              <div class="col-xs-offset-1 col-xs-4 img-rounded light-blue-node" style="margin-top: 1.2em">
                <%= votation.user.name%>
              </div>
              <div class="col-xs-offset-2 col-xs-4 img-rounded light-blue-node" style="margin-top: 1.2em">
                <%= votation.result%>
              </div>
            </div>
          <%end%>    
        <%end%>    
      </div>
    </div>
  <%end%>    
</div>