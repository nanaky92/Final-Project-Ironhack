<div class="container text-center">
  <div class="row">
    <div class="col-md-offset-2 col-md-8 col-xs-offset-1 col-xs-10">
        <h3>Create new appointment for <%=@event.name%></h3>
    </div>
  </div>

  <div class="row margin-top-with-header">
    <div class="col-md-offset-2 col-md-8 col-xs-offset-1 col-xs-10 img-rounded light-blue-node">
       <%= form_for(@appointment, url: group_event_appointments_url) do |f| %>

          <div class="field field-margin">
            <%= f.label :action, "What do you want to do?" %>
            <%= f.text_field :action %>
          </div>

          <div class="field field-margin">
            <%= f.label :place, "Where? - Select place"  %>
            <%= f.text_field :place %>
          </div>

          Time
          <div class="field  field-margin">
            <%= f.label :time, "When? - Select time" %>
            <%= f.datetime_select :time, {:default => Time.now}, { class: "btn" } %>
          </div>

          <%= f.text_field :event_id, :type => :hidden, value: @event.id %>

          <div class="actions field-margin">
            <%= f.submit class: "btn btn-primary"%>
          </div>
        <% end %>    
    </div>    
  </div>
 
      </div>
  </div>
</div>
