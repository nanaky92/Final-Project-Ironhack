<div class="container">
  <div class="row">
    <div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6 text-center">
        <h3>Create new appointment for <%=@event.name%></h3>
    </div>
  </div>

  <div class="row" style="margin-top: 1em">
    <div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6 text-center img-rounded light-blue-node">
       <%= form_for(@appointment, url: create_appointment_url) do |f| %>

          <div class="field">
            <%= f.label :action, "What do you want to do?" %>
            <%= f.text_field :action %>
          </div>

          <div class="field">
            <%= f.label :place, "Where? - Select place"  %>
            <%= f.text_field :place %>
          </div>

          Time
          <div class="field">
            <%= f.label :time, "When? - Select time" %>
            <%= f.datetime_select :time, {:default => Time.now}, { class: "btn" } %>
          </div>

          <%= f.text_field :event_id, :type => :hidden, value: @event.id %>

          <div class="actions">
            <%= f.submit class: "btn btn-primary"%>
          </div>
        <% end %>    
    </div>    
  </div>
 
      </div>
  </div>
</div>
