<%@users.each do |user|%>
  <p>
    <ul>
      <li><%=user.name%></li>
      <li><%=user.email%></li>
        <!-- if user is admin -->
      <% if (@isUserAdmin) %>
        <li><%= link_to "Delete user", "/groups/#{@group.id}/delete_user"%></li>
      <% end %>
    </ul>
  </p>
<%end%>

  <!-- if user is admin -->
<% if (@isUserAdmin) %>
  <p><%= link_to "Invite users", "/groups/#{@group.id}/invite_users" %></p>
  <p><%= link_to "Create event", "/groups/#{@group.id}/events/new" %></p>
<%end%>

